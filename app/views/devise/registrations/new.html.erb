<div class="main-container">
<div class="field-container">
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
<h2>Insta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-btn" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-btn" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-btn" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"login-btn" %>
  </div>
<% end %>
<p>Already Having Account?
<%= render "devise/shared/links" %>
</div>
</div>
